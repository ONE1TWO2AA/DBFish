<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="35dp"
        android:paddingTop="60dp"
        android:paddingRight="35dp"
        android:paddingBottom="80dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/alogo" />

        <com.miracle.base.view.XEditText
            android:id="@+id/etAccount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/login_input_bg"
            android:textColor="@color/main_text_color"
            android:textSize="14sp"
            app:XEditText_Hint="用户名/手机号/邮箱"
            app:XEditText_PaddingLeft="10dp"
            app:XEditText_PaddingRight="10dp"
            app:XEditText_TextColor="@color/white"
            app:XEditText_TextColorHint="@color/withdraw_grey" />


        <com.miracle.base.view.XEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/login_input_bg"
            android:inputType="textPassword"
            android:textColor="@color/main_text_color"
            android:textSize="14sp"
            app:XEditText_Hint="密码"
            app:XEditText_IsPassword="true"
            app:XEditText_PaddingLeft="10dp"
            app:XEditText_PaddingRight="10dp"
            app:XEditText_ShowEyes="true"
            app:XEditText_TextColor="@color/white"
            app:XEditText_TextColorHint="@color/withdraw_grey" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_base_btn"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="@color/white"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="新用户注册"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</layout>
